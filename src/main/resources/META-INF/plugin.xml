<idea-plugin>
    <id>com.RaySoLink</id>
    <name>RaySoLink</name>
    <vendor email="jameshulena1@gmail.com">Guesswhoitis</vendor>
    <vendor email="matthew@hailwood.nz">Hailwood</vendor>
    <description><![CDATA[
    An open source plugin for JetBrains IDE's that allows the user to highlight code and quickly generate Ray.so links
  ]]></description>
    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>
    <actions>
        <action id="RaySoLink" class="RaySoLink" text="Create ray.so Link">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>